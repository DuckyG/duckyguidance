<%= paginate @notes, :window => 1, :remote => true, :param_name => :note_page %>
<table cellpadding="0" cellspacing="0">
			<thead>
				<tr>
					<th class="spaced">Date Posted</th>
					<th>Note Title</th>
					<th>Assigned to&hellip;</th>   
				</tr>
			</thead>
			<tbody>
				<% @notes.each do |note| %>
					<tr>
						<td class="spaced">
						  <%= note.numeric_date_and_time %>
						</td>
						<td><a href="<%= note_path(note) %>"><%= note.summary %></a></td>
						<td>
							<%= link_to note.subject_name, note.subject == note.students ? note_students_path(note) : note.subject%>
						</td>
					</tr>
				<% end %>
			</tbody>
</table>
<%= paginate @notes, :window => 1, :remote => true, :param_name => :note_page %>
