<div class="modNotes block module">
	<h2 class="head">
		Recent Notes
<!--//
	DEVELOPER COMMENT: Toggle for Detail view vs. List view
//-->
		<div class="modToggle">
			Detail View&nbsp;|&nbsp;<a href="#">List View</a>
		</div><!-- /modToggle -->
	</h2>
	<div class="content">
<!--//
	DEVELOPER COMMENT: Pagination here
//-->
		<table cellpadding="0" cellspacing="0">
			<thead>
				<tr>
					<th class="spaced">Date Posted</th>
					<th>Note Title</th>
					<th>Assigned to&hellip;</th>   
				</tr>
			</thead>
			<tbody>
				<% notes.each do |note| %>
					<tr>
						<td class="spaced">
<!--//
	DEVELOPER COMMENT: Note date here
//-->
						<%= note.numeric_date_and_time %>
						</td>
						<td><a href="<%= note_path(note) %>"><%= note.summary %></a></td>
						<td>
<!--//
	DEVELOPER COMMENT: Wrap the note subject in a link leading to that subject
//-->
							<%= link_to note.subject_name, note.subject == note.students ? note_students_path(note) : note.subject%>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>


<!--//
	DEVELOPER COMMENT: This is what the Note item should look like in expanded form.
	                   There will be less items in this list.
	                   BOTH NOTES VIEWS WILL BE PAGINATED.
	                   Consult Nate to see how many records should be generated for
	                   each list (detail view will be different than list view).
//-->

		<table class="notesList dashList" cellpadding="0" cellspacing="0">
			<tbody>
				<% notes.each do |note| %>
				<tr>
					<td class="spaced">
						<h3 class="title"><a href="<%= note_path(note) %>"><%= note.summary %></a></h3>
						<span class="classification"><%= link_to note.category.name, note.category%></span>
						<strong class="subtitle"><%= note.formatted_date_and_time %> &nbsp;&mdash;&nbsp; <span>by</span> <%= note.counselor.full_name %></strong>
						<p class="name"><%= link_to note.subject_name, note.subject == note.students ? note_students_path(note) : note.subject%></p>
						<%- note_text =h(note.notes).gsub("\n","<br/>") -%>
						<p><%=raw(note_text.length > 165 ? "#{note_text.slice(0..165)}&hellip;" : note_text) %></p>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>


<!--//
	DEVELOPER COMMENT: Pagination here
//-->
	</div>
</div><!--// end modNotes //-->
