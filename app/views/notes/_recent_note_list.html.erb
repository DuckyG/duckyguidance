<div class="modNotes block module">
	<h2 class="head">Recent Notes</h2>
	<div class="content">
		<table cellpadding="0" cellspacing="0">
			<thead>
				<tr>
					<th class="spaced">Assigned to</th>   
					<th>Note Title</th>
				</tr>
			</thead>
			<tbody>
				<% notes.each do |note| %>
					<tr>
						<td class="spaced"><%=note.groups.count==1 ? note.groups.first.name : note.students.first.first_name + " " + note.students.first.last_name %></td>
						<td><a href="<%= note_path(note) %>"><%= note.summary %><span class="arr">&nbsp;&rarr;</span></a></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div><!--// end modNotes //-->