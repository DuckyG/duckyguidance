:javascript
  $j(document).ready(function(){
    $j('.note_info').click(slide_toggle_notes)
    $j('.note_notes').hide()
  });
  var slide_toggle_notes = function(){
    $j(this).parent().find('.note_notes').slideToggle()
     };

.grid_5
  %h2 Meeting Requests
.grid_12
  #requests
    -@requests.each do |request|
      =render :partial => 'meeting_requests/new_meeting_request',:locals => {:request => request, :last => @requests.last}
    -if !@request or @request.count == 0
      .grid_1
        %strong None
     
.grid_5
  %h2 Upcoming Meetings
.grid_12
  #requests
    -@upcoming_meetings.each do |note|
      =render :partial => 'meeting_requests/upcoming_meeting',:locals => {:note => note, :last => @requests.last}
    -if !@upcoming_meetings or @upcoming_meetings.count == 0
      .grid_1
        %strong None
.grid_5
  %h2 Recent Notes
.grid_12
  =render :partial => 'shared/note_list', :locals => { :note_list => @notes}
