.meeting{:id =>[meeting.type, meeting.id],:class => meeting == last && "last"}
  .meeting_info{:class =>odd_even}
    .grid_3
      %h6=meeting.occured_on.strftime('%B %d @ %I:%M %p')
    .grid_5
      %strong=meeting.summary
    .grid_2.counselor.right
      =link_to meeting.student.last_name + ', ' +meeting.student.first_name, meeting.student
    .grid_1.right
      %strong Student
    .clear
  .clear
  .meeting_notes
    %strong.grid_1 Notes
    .clear
    .notes
      %pre=meeting.notes
  .clear