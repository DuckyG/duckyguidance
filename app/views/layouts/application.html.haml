!!! 5
%html
  %head
    %title Guidance
    = stylesheet_link_tag 'reset', 'text','960','scaffold', 'calendar/calendar-blue','jquery-ui','styles'
    = javascript_include_tag :defaults, "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js","http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.2/jquery-ui.min.js",'rails-jquery','jquery.dynDateTime.min','lang/calendar-en.min'
    = javascript_include_tag 'jquery.form'
    = csrf_meta_tag
    :javascript
      $j = jQuery.noConflict();

  %body
    .container_12
      #login_nav.grid_3.prefix_9
        -if current_counselor
          Welcome, 
          = link_to current_counselor.first_name, current_counselor
          |
          = link_to 'Logout', logout_path, :method => :delete
        -else
          = link_to "Login", login_path
      .clear
      #header.grid_12
        %a{:href=>dashboard_path}
          %span Ducky Guidance
      .clear
      .grid_12
        %h1
          =@title
          &nbsp;
          -if current_counselor
            #nav
              = link_to 'Dashboard', dashboard_path
              |
              = link_to 'Students', students_path
            
      .left
        = yield
      
