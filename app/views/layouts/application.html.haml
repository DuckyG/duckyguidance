!!! 5
%html
  %head
    %title= current_school.name if current_school
    %title= "Ducky Guidance" if !current_school
    = stylesheet_link_tag 'reset', 'text','960','scaffold', 'calendar/calendar-blue','jquery-ui','styles'
    = javascript_include_tag :defaults, "https://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js","https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.2/jquery-ui.min.js",'rails-jquery','jquery.dynDateTime.min','lang/calendar-en.min'
    = javascript_include_tag 'jquery.form'
    = csrf_meta_tag
    :javascript
      $j = jQuery.noConflict();
      $j(document).ready(function(){
        $j('.now').click(set_time_now);
        $j("#meeting_date").dynDateTime({showsTime: false, ifFormat: "%m/%d/%Y"});
      });
      var set_time_now = function(){
        d = new Date();
        $j(this).parent().find('input[type="text"]').val(d.print("%H:%M %p"))
        return false;
      };
      

  %body
    .container_12
      #login_nav.grid_3.prefix_9
        -if current_counselor
          Welcome, 
          = link_to current_counselor.first_name, current_counselor
          |
          = link_to 'Logout', logout_path
        -else
          = link_to "Login", login_path
      .clear
      #header.grid_12
        -url = root_path
        -url = dashboard_path if current_school && current_counselor
        
        %a{:href=>url}
          %span= current_school.name if current_school
          %span= "Ducky Guidance" if !current_school
      .clear
      .grid_12
        %h1
          =@title
          &nbsp;
          -if current_counselor
            #nav
              = link_to 'Dashboard', dashboard_path
              |
              = link_to 'Students', students_path
      .clear
      .grid_12
        -if notice
          = notice
      .left
        = yield
      
