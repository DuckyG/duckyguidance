<% content_for :head do %>
  <title><%=@tag.name %> - Tags - <%=current_school.name %> - Ducky Guidance</title>
<% end %>
<h2 class="head pageTitle"><span>Tag:</span> <%= @tag.name %></h2>

<table cellpadding="0" cellspacing="0">
	<tbody>
		<tr>
			<td class="spaced label">Name</td>
			<td><%= @tag.name %></td>
		</tr>
    <tr>
			<td class="spaced label">Count</td>
			<td><%= @tag.notes.count %></td>
		</tr>
	</tbody>
</table>

<%= render :partial => "shared/month_note_chart", :locals => {:notes => @tag.notes} %>

<%= render "notes/block" %>

<% content_for :auxiliary do %>
	<div class="modReports block module">
		<h2 class="head">Reports</h2>
		<div class="content">
			<script type="text/javascript" src="https://www.google.com/jsapi"></script>
			<%= render :partial => "shared/month_note_chart", :locals => {:notes => @tag.notes} %>
			<div id="chart_div" class="modChart module"></div>
			<div id="chart_div2" class="modChart module"></div>
		</div>
	</div><!--// end modReports //-->
<% end %>
