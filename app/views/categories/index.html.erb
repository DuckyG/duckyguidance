<% content_for :head do %>
  <title>Categories -  <%=current_school.name %> - Ducky Guidance</title>
<% end %>
<h2 class="head pageTitle">Categories</h2>

<% if can? :create, Category %>
	<div class="rightLink">
		<a href="<%=new_category_path%>">Add a Note Category<span>&nbsp;&rarr;</span></a>
	</div><!-- /rightLink -->
<% end %>
<div class="modCategories modData block module">
	<div class="content">
		<table cellpadding="0" cellspacing="0">
			<thead>
				<tr>
					<th class="spaced">Note Category Title</th>
					<th>View Note Category</th>
				</tr>
			</thead>
			<tbody>
				<%-@categories.each do |category|-%>
				<tr>
					<td class="spaced w90"><strong><%= category.name %></strong></td>
					<td class="action"><%= button_to "View Note Category", category_path(category), :method => :get %></td>
				</tr>
				<%- end -%>
			</tbody>
		</table>
	</div>
</div><!--// end modRequests //-->

<% content_for :auxiliary do %>
	<div class="modReports block module">
		<h2 class="head">Reports</h2>
		<div class="content">
			<script type="text/javascript" src="https://www.google.com/jsapi"></script>
			<%= render :partial => "shared/category_note_chart", :locals => {:notes => current_school.notes} %>
			<div id="chart_div" class="modChart module"></div>
		</div>
	</div><!--// end modReports //-->
<% end %>
