<h2 class="head pageTitle">Categories</h2>
<div class="modCategories modData block module">
	<a class="rightLink" href="<%=new_category_path%>">Add a Note Category<span>&nbsp;&rarr;</span></a>
	<div class="content">
		<table cellpadding="0" cellspacing="0">
			<thead>
				<tr>
					<th class="spaced">Note Category Title</th>
					<th>View Note Category</th>
				</tr>
			</thead>
			<tbody>
				<%-@categories.each do |category|-%>
				<tr>
					<td class="spaced w90"><strong><%= category.name %></strong></td>
					<td class="action"><%= button_to "View Note Category", category_path(category), :method => :get %></td>
				</tr>
				<%- end -%>
			</tbody>
		</table>
	</div>
</div><!--// end modRequests //-->
