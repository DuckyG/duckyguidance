<h2 class="head pageTitle"><%=@student.full_name%></h2>

<span class="studentPic"><%=image_tag('https://images.duckyg.com/' + Digest::MD5.hexdigest("ssvt"+@student.student_id.to_s) + '.jpg')%></span>

<div class="rightLink">
	<a href="<%= edit_student_path(@student)%>">Edit<span>&nbsp;&rarr;</a>
</div>

<table cellpadding="0" cellspacing="0">
	<tr>
		<td class="spaced label">Year of Graduation</td>
		<td><%=@student.year_of_graduation%></td>
	</tr>
	<tr>
		<td class="spaced label">Shop</td>
		<td><%=@student.shop%></td>
	</tr>
	<tr>
		<td class="spaced label">City</td>
		<td><%=@student.city%></td>
	</tr>
	<tr>
		<td class="spaced label">Counselor</td>
		<td><%=@student.counselor.formal_name%></td>
	</tr>
	<tr>
		<td class="spaced label">Primary Phone</td>
		<td><%=@student.primary_phone_number%></td>
	</tr>
	<tr>
		<td class="spaced label">Student ID</td>
		<td><%=@student.student_id%></td>
	</tr>
</table>

<div class="modNotes block module">
	<h2 class="head">Notes</h2>
	<%=render :partial => "shared/new_note" %>

	<%=render :partial => 'shared/note_list', :locals => {:notes => @student.notes.sort{|x,y| y.created_at <=> x.created_at} }%>
</div><!--// end modNotes //-->

