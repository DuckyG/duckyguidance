.grid_5
  %h2
    =link_to @meeting.student.first_name + ' '+ @meeting.student.last_name, @meeting.student
.clear
.grid_3
  %strong Occurred On
.grid_4
  = @meeting.created_at.strftime('%B %d @ %I:%M %p')
.clear
.grid_3
  %strong Duration
.grid_4
  - hours,mins = @meeting.duration_hours_min
  -if hours > 0
    =hours.to_s + " " + (hours > 1 ? t('hour').pluralize : t('hour')) + (mins > 0 ? ',' : '')
  -if mins > 0 
    =mins.to_s + " " + (mins > 1 ? t('minute').pluralize : t('minute'))
.clear
.grid_3
  %strong Counselor
.grid_4
  = @meeting.counselor.last_name
.clear
.grid_1
  %strong Notes
.grid_12
  %pre= @meeting.notes
