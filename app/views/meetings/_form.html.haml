
= form_for(@meeting) do |f|
  - if @meeting.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@meeting.errors.count, 'error')} prohibited this user from being saved:"
      %ul
      - @meeting.errors.full_messages.each do |msg|
        %li= msg
  =f.hidden_field :student_id, :value => @meeting.student.id
  .grid_2
    =f.label 'Category'
    %br
    = f.select :category_id, current_school.categories.all.map {|c| [c.name, c.id]}
  .clear
  .grid_2
    =f.label :summary
  .clear
  .grid_3
    =f.text_field :summary
  .clear
  .grid_2
    =f.label :tags
  .clear
  .grid_3
    =f.text_field :tags_string
  .clear
  .grid_1
    =f.label :notes
  .clear
  .grid_5
    =f.text_area :notes
  .clear
  .grid_1
    = f.submit 'Save Note'
  .clear
