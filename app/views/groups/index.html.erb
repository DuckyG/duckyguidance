<% content_for :head do %>
  <title>Groups -  <%=current_school.name %> - Ducky Guidance</title>
<% end %>
<div class="cols2">
	<div class="col">
		<h2 class="head pageTitle">Student Groups</h2>
		<div class="modCopy">
      <% if can? :create, Group %>
			<div class="rightLink">
				<p>&nbsp;</p>
				<a href="<%= new_group_path %>">Add a Student Group<span>&nbsp;&rarr;</span></a>
			</div><!-- /rightLink -->
      <% end %>
		</div><!-- /modCopy -->
		<div class="modGroups modData block module">
			<div class="content">
				<table cellpadding="0" cellspacing="0">
					<thead>
						<tr>
							<th class="spaced">Group Title</th>
							<th>View Student Group</th>
						</tr>
					</thead>
					<tbody>
						<%- @groups.each do |group| -%>
						<tr>
							<td class="spaced w90"><strong><%= group.name %></strong></td>
							<td class="action"><%= button_to "View Student Group", group_path(group), :method => :get %></td>
						</tr>
						<%- end -%>
					</tbody>
				</table>
			</div>
		</div><!--// end modRequests //-->
	</div>
	<div class="col">
		<h2 class="head pageTitle">Smart Groups</h2>
		<div class="modCopy">
			<p>Smart groups are self updating groups.</p>
      <% if can? :create, SmartGroup %>
			<div class="rightLink">
				<a href="<%= new_smart_group_path %>">Add a Smart Group<span>&nbsp;&rarr;</span></a>
			</div><!-- /rightLink -->
      <% end %>
		</div><!-- /modCopy -->
		<div class="modGroups modData block module">
			<div class="content">
				<table cellpadding="0" cellspacing="0">
					<thead>
						<tr>
							<th class="spaced">Group Title</th>
							<th>View Smart Group</th>
						</tr>
					</thead>
					<tbody>
						<%- @smart_groups.each do |group| -%>
						<tr>
							<td class="spaced w90"><strong><%= group.name %></strong></td>
							<td class="action"><%= button_to "View Student Group", group, :method => :get %></td>
						</tr>
						<%- end -%>
					</tbody>
				</table>
			</div>
		</div><!--// end modRequests //-->
	</div>
</div>
