<h2 class="head pageTitle">Student Groups</h2>
<div class="modGroups modData block module">
	<a class="rightLink addItem" href="<%= new_group_path %>">Add a Student Group<span>&nbsp;&rarr;</span></a>
	<div class="content">
		<table cellpadding="0" cellspacing="0">
			<thead>
				<tr>
					<th class="spaced">Group Title</th>
					<th>View Student Group</th>
				</tr>
			</thead>
			<tbody>
				<%- @groups.each do |group| -%>
				<tr>
					<td class="spaced w90"><strong><%= group.name %></strong></td>
					<td class="action"><%= button_to "View Student Group", group_path(group), :method => :get %></td>
				</tr>
				<%- end -%>
			</tbody>
		</table>
	</div>
</div><!--// end modRequests //-->