:javascript
  $j(document).ready(function(){
    $j(".multiselect").multiselect();
  });
= form_for(@group) do |f|
  - if @group.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@group.errors.count, 'error')} prohibited this user from being saved:"
      %ul
      - @group.errors.full_messages.each do |msg|
        %li= msg
  
  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    = f.label :description
    %br
    = f.text_area :description
  .field
    = f.label :students
    %br
    = select_tag "group[student_ids]", build_student_options(current_school.students, @group.students), {:multiple => true, :class => 'multiselect'}


  .actions
    = f.submit 'Save'
