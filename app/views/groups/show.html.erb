<% content_for :head do %>
  <title><%=@group.name %> - Group -  <%=current_school.name %> - Ducky Guidance</title>
<% end %>
<h2 class="head pageTitle"><span>Group:</span> <%= @group.name %></h2>

<div class="rightLink">
	<a href="<%= edit_group_path(@group)%>">Edit<span>&nbsp;&rarr;</a>
</div>

<table cellpadding="0" cellspacing="0">
	<tbody>
		<tr>
			<td class="spaced label">Name</td>
			<td><%= @group.name %></td>
		</tr>
		<tr>
			<td class="spaced label">Description</td>
			<td><p><%=@group.description%></p></td>
		</tr>
	</tbody>
</table>

<div class="modList modData block module">
	<h2 class="head">Group Members</h2>
	<div class="content">
		<%-if params[:page] =~ /^\d+$/ 
				page = params[:page].to_i
			else
				page = 1
			end
			-%>
		
		<%=render :partial => "shared/pagination",:locals => {:count => @group.students.count, :page => page} %>

		<%=render :partial => "shared/student_list",:locals => {:students => @group.students.offset((page-1)*5).limit(5).order(:last_name)} %>

		<%=render :partial => "shared/pagination",:locals => {:count => @group.students.count, :page => page} %>
	</div>
</div><!--// end modRequests //-->


<div class="modNotes block module">
	<h2 class="head">Notes</h2>
	<%=render :partial => "shared/new_note" %>

	<%=render :partial => 'shared/note_list', :locals => {:notes => @group.notes}%>
</div><!--// end modNotes //-->

