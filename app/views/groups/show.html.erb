<h2 class="head pageTitle"><%= @group.name %></h2>

<table cellpadding="0" cellspacing="0">
	<tr>
		<td class="spaced label"><%=t('Description')%></td>
		<td><%=@group.description%></td>
	</tr>
	
</table>

<div class="modNotes block module">
	<h2 class="head">Notes</h2>
	<%=render :partial => "shared/new_note" %>

	<div class="notesList content">
		<table cellpadding="0" cellspacing="0">
			<%-@group.notes.each do |note|-%>
			<tr class="drop">
				<td class="spaced"><strong><%=note.summary%></strong></td>
				<td>
					<div class="trigger">
						View Note<span class="arr">&nbsp;&rarr;</span>
					</div>
				</td>
			</tr>
			<tr class="full">
				<td colspan="2">
					<div class="modCopy">
						<p><%=raw(note.notes.gsub(/\<(.*?)\>/,"").gsub("\n","<br/>"))%></p>
					</div>
				</td>
			</tr>
			<%-end-%>
		</table>
	</div>
</div><!--// end modNotes //-->

